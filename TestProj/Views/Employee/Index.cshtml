<table id="employeeTable" class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Department</th>
            <th>Experience</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.Age</td>
                <td>@employee.Gender</td>
                <td>@employee.Department.Name</td>
                <td>@string.Join(", ", employee.Languages.Select(x => x.Name))</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = employee.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = employee.Id }, new { onclick = "return confirm('Are you sure?');" })
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    @Html.ActionLink("Add New Employee", "Add")
</p>


@section styles{
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">

}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    @Scripts.Render("~/bundles/EmployeeDataTable")
}